{
  "name": "redux-anecdotes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/user-event": "^12.6.3",
    "axios": "^0.27.2",
    "json-server": "^0.17.0",
    "json-server-reset": "^1.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.6",
    "react-scripts": "4.0.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.4.1",
    "web-vitals": "^1.1.0"
  },
  "scripts": {
    "build": "cd frontend && npm install && react-scripts build",
    "test": "cypress run",
    "cypress:open": "cypress open",
    "eject": "react-scripts eject",
    "start": "cross-env NODE_ENV=production npm run build && node backend/server.js",
    "start:dev": "cross-env NODE_ENV=development npm run build && node backend/server.js",
    "dev": "nodemon --exec \"npm run start:dev\" -e \"js,jsx\" --ignore \"frontend/build\" --ignore \"cypress/\" -d 2",
    "eslint": "eslint './**/*.{js,jsx}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cypress": "^10.3.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.19",
    "redux-devtools-extension": "^2.13.9"
  }
}
